#!/bin/bash
#Designed to help the Ops for deploying the apps

PATH1=` ls -ltr /app/dre/thirdparty/apache-tomcat-9.0.10/webapps| grep -i war|  awk '{print $11}'|cut -d/ -f 1,2,3,4,5|sed -n '1p' `
PATH2=` ls -ltr /app/dre/thirdparty/apache-tomcat-9.0.10/webapps| grep -i war|  awk '{print $11}'|cut -d/ -f 1,2,3,4,5|sed -n '2p' `
PATH3=` ls -ltr /app/dre/thirdparty/apache-tomcat-9.0.10/webapps| grep -i war|  awk '{print $11}'|cut -d/ -f 1,2,3,4,5|sed -n '3p' `
PATH4=` ls -ltr /app/dre/thirdparty/apache-tomcat-9.0.10/webapps| grep -i war|  awk '{print $11}'|cut -d/ -f 1,2,3,4,5|sed -n '4p' `
DELFILE1=` ls -ltr /app/dre/thirdparty/apache-tomcat-9.0.10/webapps| grep -i war|  awk '{print $9}'| sed -n '1p'| rev | cut -d'.' -f 2,3,4,5,6,7| rev `
DELFILE2=` ls -ltr /app/dre/thirdparty/apache-tomcat-9.0.10/webapps| grep -i war|  awk '{print $9}'| sed -n '2p'| rev | cut -d'.' -f 2,3,4,5,6,7| rev `
DELFILE3=` ls -ltr /app/dre/thirdparty/apache-tomcat-9.0.10/webapps| grep -i war|  awk '{print $9}'| sed -n '3p'| rev | cut -d'.' -f 2,3,4,5,6,7| rev `
DELFILE4=` ls -ltr /app/dre/thirdparty/apache-tomcat-9.0.10/webapps| grep -i war|  awk '{print $9}'| sed -n '4p'| rev | cut -d'.' -f 2,3,4,5,6,7| rev `
PID=` ps -ef | grep 'apache-tomcat-9.0.10' | grep java | grep -v grep | awk '{ print $2 }' `
printf '1. Start\n'
printf '2. Shutdown\n'

        while true; do
        read NUM
        case $NUM in
        1)
                D1=` cat /home/dreadmin/scripts/current | sed -n -e 1p `; D2=` cat /home/dreadmin/scripts/current | sed -n -e 2p `; D3=` cat /home/dreadmin/scripts/current | sed -n -e 3p `; D4=` cat /home/dreadmin/scripts/current | sed -n -e 4p `;
                C1=` cat /home/dreadmin/scripts/current |cut -d/ -f 5|sed -n -e 1p `; C2=` cat /home/dreadmin/scripts/current |cut -d/ -f 5|sed -n -e 2p `;C3=` cat /home/dreadmin/scripts/current |cut -d/ -f 5|sed -n -e 3p `; C4=` cat /home/dreadmin/scripts/current |cut -d/ -f 5|sed -n -e 4p`;
                VARFILE1=` grep -is using /app/var/lsurf/log/$C1/control-script.log| tail -n 1| awk '{print $2}' `
                VARFILE2=` grep -is using /app/var/lsurf/log/$C2/control-script.log| tail -n 1| awk '{print $2}' `
                VARFILE3=` grep -is using /app/var/lsurf/log/$C3/control-script.log| tail -n 1| awk '{print $2}' `
                VARFILE4=` grep -is using /app/var/lsurf/log/$C4/control-script.log| tail -n 1| awk '{print $2}' `

                printf "Type S to start the tomcat \nType D to deploy apps\nType E for exit\n"
                        while read OPTION;do
                        case $OPTION in
                          S)
                                printf "############Starting tomcat.Please monitor the logs############\n";
                                /app/dre/thirdparty/apache-tomcat-9.0.10/bin/startup.sh;
                                printf 'Type D to deploy apps.Type E to exit\n';continue;
                                ;;
                          D)
                                printf 'Hello Ops,\n Which app do you want me to deploy?\nSelect the number\n';echo -e "1. $C1";echo -e "2. $C2";echo -e "3. $C3";echo -e "4. $C4";
                        while read SELECT;do

    case $SELECT in
     1)
          echo "Identifying env-var file";
          echo "Last used var file is $VARFILE1";
          echo "**************************Deploying $C1***************************";
          cd $D1/bin;
          ./upd-env $VARFILE1;
#         $D1/bin/upd-env $VARFILE1;
          echo -e "2. $C2";echo -e "3. $C3";echo -e "4. $C4";echo "Type E to exit";continue;
          ;;
     2)
          echo "Identifying env-var file";
          echo "Last used var file is $VARFILE2";
          echo "**************************Deploying $C2***************************";
          cd $D2/bin;
          ./upd-env $VARFILE2;
          echo -e "3. $C3";echo -e "4. $C4";echo "Type E to exit";continue;
          ;;
     3)
          echo "Identifying env-var file";
          echo "Last used var file is $VARFILE3";
          echo "**************************Deploying $C3***************************";
          cd $D3/bin;
          ./upd-env $VARFILE3;
          echo -e "4. $C4";echo "Type E to exit";continue;
          ;;
     4)
          echo "Identifying env-var file";
          echo "Last used var file is $VARFILE4";
          echo "**************************Deploying $C4***************************";
          cd $D4/bin;
          ./upd-env $VARFILE4;
          ;;
     E)
          exit 0
          ;;
     *)
          echo "There is no such package.Please select the valid option or type E to exit";continue
          ;;
        esac
        break
        done;;
                E)
                        exit 0
                        ;;

                *)
                        echo "Invalid selection.Please select the valid option or type E to exit";continue
                        ;;
                  esac
                  break
                  done;;
        2)
                echo "$PATH1" > /home/dreadmin/scripts/current;echo "$PATH2" >> /home/dreadmin/scripts/current;echo "$PATH3" >> /home/dreadmin/scripts/current;echo "$PATH4" >> /home/dreadmin/scripts/current
                printf "Type S to shutdown the tomcat \nType R to remove the packages\nType E for exit\n"
                        while read SHUTDOWN;do
                        case $SHUTDOWN in
                          S)
                                printf "############Shutting down tomcat.Please monitor the logs############\n";
                                /app/dre/thirdparty/apache-tomcat-9.0.10/bin/shutdown.sh;
                                printf '******Please wait for 15 seconds******\n'
                                        sleep 15;
                                        if [[ $(ps -ef | grep 'apache-tomcat-9.0.10' | grep java | grep -v grep | awk '{ print $2 }') ]];then
                                        printf "TOMCAT is still running\n";
                                        printf "Type K to kill the tomcat forcefully\nType E for exit\n";
                                        while true; do
                                                read TOM
                                                case $TOM in
                                                        K)
                                                                kill $PID
                                                                ;;
                                                        E)
                                                                exit 0
                                                                ;;
                                                        *)
                                                                echo "Invalid selection.Please select the valid option or type E to exit";continue;
                                                                ;;
                                         esac
                                         break
                                         done

                                else
                                        echo "TOMCAT is stopped";
                                fi
                                printf 'Type R to remove the packages.Type E to exit\n';continue;
                                ;;
                          R)
                                printf 'Removing packages\n';
                                echo "$DELFILE1";
                                echo "$DELFILE2";
                                echo "$DELFILE1";
                                echo "$DELFILE4";
                                cd /app/dre/thirdparty/apache-tomcat-9.0.10/webapps/
                                rm -rf "$DELFILE1" "$DELFILE1.war";
                                rm -rf "$DELFILE2" "$DELFILE2.war";
                                rm -rf "$DELFILE3" "$DELFILE3.war";
                                rm -rf "$DELFILE4" "$DELFILE4.war";
                                ;;
                          E)
                                exit 0
                                ;;
                          *)
                                echo "Invalid selection.Please select the valid option or type E to exit";continue;
                                ;;
                        esac
                        break
                        done;;
  esac
  break
 done

